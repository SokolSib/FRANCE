<Window x:Class="TicketWindow.Winows.OtherWindows.Message.WMessageTimeList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:TicketWindow.Properties"
        WindowStyle="None" Topmost="True"
        Title="W_MessageTimeList" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock  x:Name="Message" TextWrapping="WrapWithOverflow" FontSize="14" Foreground="Red" Padding="10" TextAlignment="Justify" Text="Message"/>
        <Grid Grid.Row="1">
            <Button Background="Green" Click="BcanClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="96" FontSize="25" Text="{x:Static properties:Resources.BtnOk}"/>
                    <TextBlock x:Name="Tbtimer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="93" FontSize="25"></TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
