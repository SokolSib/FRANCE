<Window x:Class="Devis.B.Sync"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Devis.B"
        mc:Ignorable="d"
        Title="Sync" Height="400" Width="500" WindowStartupLocation="CenterScreen"  Background="Black" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="message" Grid.RowSpan="4" Grid.ColumnSpan="2" FontSize="25" Foreground="White" >Bonjour, voulez vous faire une mis à jour de votre appareil?</Label>
        <Button Grid.Column="0" Grid.Row="4" x:Name="bOk" IsDefault="True" Background="Green" IsEnabled="False" Click="bOk_Click" >Mise à jour</Button>
        <Button Grid.Column="1" Grid.Row="4" x:Name="bCancel" IsCancel="True" Background="Red" Click="bCancel_Click">Fermer</Button>
    </Grid>
</Window>
