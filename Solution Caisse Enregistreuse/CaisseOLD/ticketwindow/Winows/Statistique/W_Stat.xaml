<Window x:Class="ticketwindow.Winows.Statistique.W_Stat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="W_Stat" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.Row="1"  x:Name="xNation"/>
        <ListBox Grid.Column="1" Grid.Row="1"  x:Name="xPlaceArround" />
        <Button Content="Ok" x:Name="Ok" Grid.Column="0" Grid.Row="2" Click="Ok_Click"/>
        <Button Content="Cancel" x:Name="Cancel" Grid.Column="1" Grid.Row="2" Click="Cancel_Click"/>
        <Button Grid.Column="0" Grid.Row="0" x:Name="xBNation" ToolTip="show_grid_StatNationPopup" Click="xBNation_Click">MODIF</Button>
        <Button Grid.Column="1" Grid.Row="0" x:Name="xBPlaceArround" ToolTip="show_grid_StatPlaceArrond" Click="xBNation_Click">MODIF</Button>
    </Grid>
</Window>
